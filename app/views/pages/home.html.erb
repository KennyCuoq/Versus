<!-- CARDS -->
<div class="CTA-cards">
  <% @home_cta_cards.each do |card| %>
    <div class="triple-card-category home-CTA-cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= card.photo %>)">
      <a href="<%= card.link_url %>"><button type="button" id="card-button" class="button btn btn-dark "><%= card.title.upcase %></button></a>
    </div>
  <% end %>

</div>

