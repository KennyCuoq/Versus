<div class="row">
  <div id="mycarousel" class="carousel slide hidden-xs hidden-sm" data-ride="carousel">
  <!-- indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @home_banners.shuffle.each_with_index do |banner, index| %>
      <div class="item <%= 'active' if index == 0 %>">
        <%= cl_image_tag banner.photo %>
      </div>
    <% end %>
  </div>

  <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- CARDS -->

<div class="cards">
  <% @home_cta_cards.each do |card| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= card.photo %>)">
      <a href="<%= card.link_url %>"><button type="button" id="card-button" class="btn btn-dark "><%= card.title.upcase %></button></a>
    </div>
  <% end %>
</div>

